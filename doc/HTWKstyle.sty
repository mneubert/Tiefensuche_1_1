% Beispiele unter http://zoonek.free.fr/LaTeX/LaTeX_samples_chapter/0.html
\makeatletter
\def\thickhrulefill{\leavevmode \leaders \hrule height 1ex \hfill \kern \z@}
\def\@makechapterhead#1{%
	\thispagestyle{chapstyle}
  \vspace*{120\p@}% Abstand zum oberen Rand
  {\parindent \z@ \raggedleft \reset@font
            \scshape  \fontsize{60}{62}{\textsf{\textbf{\changefont{phv}{b}{n}{\textcolor{Gray}{\thechapter}}}}}
             % bei 60 / 62 Größe der Kapitelzahl anpassbar
             % Gray wurde in Zeile 20 definiert
            % mit changefont Schriftart anpassbar, Infos: http://www.math.tu-dresden.de/~rudl/latex/fonts.pdf
        \par\nobreak
        \interlinepenalty\@M 
    \Huge \bfseries  \textsf{#1} \par\nobreak %soll die Kapitelüberschift anders aussehen hier anpassen
    											% #1 steht als Variable für die Namen der Kapitel
    \hrulefill % das ist die Linie unter der Überschrift 
    \par\nobreak
    \vskip 60\p@ % 80 = Abstand zum Textbeginn darunter
  }}
  
 
  
\def\@makeschapterhead#1{% Vorgaben fÃ¼r die Kapitelüberschriften der Verzeichnisse (Inhaltsverzeichnis etc.)
  \thispagestyle{chapstyle}
  \vspace*{10\p@}
  {\parindent \z@ \raggedleft \reset@font
            \scshape \ifnum \arabic{chapter} >0
            			\fontsize{60}{62}{\textsf{\textbf{\changefont{phv}{b}{n}{\textcolor{Gray}{\thechapter}}}}}
            		 \else            		 	
            		 	\vphantom{\@chapapp{} \thechapter }
            		 \fi
        \par\nobreak
        \interlinepenalty\@M
    \Huge \bfseries \textsf{#1} \par\nobreak % hier ist die Anpassung bei Bedarf vorzunehmen
    										% #1 steht als Variable für die Namen des Verzeichnisses
    \hrulefill % wieder die Linie
    \par\nobreak
    \vskip 40\p@ % 40 = Abstand zum Textbeginn darunter
  }}
